@using HospitalProject.ViewModel
@model HospitalProject.ViewModel.UserViewModel
@{ ViewBag.Title = "User";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml"; }

<style type="text/css">
    a:hover {
        cursor: pointer !important;
    }
</style>


<section class="content">

    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Create User</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form method="post" class="mt-3" id="userform">
                    <div class="form-group row">
                        <label asp-for="FirstName" class="col-sm-2 col-form-label">First Name</label>
                        <div class="col-sm-4">
                            <input id="txtFirstName" asp-for="FirstName" class="form-control" placeholder="First Name">
                            <span asp-validation-for="FirstName" class="text-danger field-validation-valid"></span>
                        </div>

                        <label asp-for="LastName" class="col-sm-2 col-form-label">Last Name</label>
                        <div class="col-sm-4">
                            <input id="txtLastName" asp-for="LastName" class="form-control" placeholder="Last Name">
                            <span asp-validation-for="LastName" class="text-danger field-validation-valid"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="UserShortName" class="col-sm-2 col-form-label">User Short Name</label>
                        <div class="col-sm-4">
                            <input id="txtUserShortName" asp-for="UserShortName" class="form-control" placeholder="User Short Name" disabled>
                            <span asp-validation-for="UserShortName" class="text-danger field-validation-valid"></span>
                        </div>

                        <label asp-for="EmailId" class="col-sm-2 col-form-label">Email Id</label>
                        <div class="col-sm-4">
                            <input id="txtEmailId" asp-for="EmailId" class="form-control" placeholder="Email Id">
                            <span asp-validation-for="EmailId" class="text-danger field-validation-valid"></span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <label asp-for="GenderEnum" class="col-sm-2  col-form-label">Gender</label>
                        <div class="col-sm-4">
                            <select asp-for="GenderEnum" id="ddlGender" class="form-control" asp-items="Html.GetEnumSelectList<GenderEnum>()">
                                <option value="">Select Gender</option>
                            </select>
                            <span asp-validation-for="GenderEnum" class="text-danger field-validation-valid"></span>
                        </div>

                        <label asp-for="DesignationId" class="col-sm-2 col-form-label">Designation</label>
                        <div class="col-sm-4">
                            <select asp-for="DesignationId" class="form-control" id="ddlDesignation" asp-items="@(new SelectList(ViewBag.DesignationDropdown,"Value", "Text"))">
                                <option value="">Select Designation</option>
                            </select>
                            <span asp-validation-for="DesignationId" class="text-danger field-validation-valid"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="DepartmentID" class="col-sm-2 col-form-label">Department</label>
                        <div class="col-sm-4">
                            <select asp-for="DepartmentID" class="form-control" id="ddlDepartment" asp-items="@(new SelectList(ViewBag.DepartmentDropdown,"Value", "Text"))">
                                <option value="">Select Department</option>
                            </select>
                            <span asp-validation-for="DepartmentID" class="text-danger field-validation-valid"></span>
                        </div>

                        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Phone Number</label>
                        <div class="col-sm-4">
                            <input id="txtPhoneNumber" asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" value="">
                            <span asp-validation-for="PhoneNumber" class="text-danger field-validation-valid"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-4">
                            <input id="txtPassword" type="password" asp-for="Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger field-validation-valid"></span>
                        </div>

                        <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label">Confirm Password</label>
                        <div class="col-sm-4">
                            <input id="txtConfirmPassword" type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger field-validation-valid"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="DOJ" class="col-sm-2 col-form-label">Date of Joining</label>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="far fa-calendar-alt"></i>
                                    </span>
                                </div>
                                <input id="txtDOJ" type="text" asp-for="DOJ" class="form-control float-right"
                                       placeholder="Date of Joining" value="">
                            </div>
                            <span asp-validation-for="DOJ" class="text-danger field-validation-valid"></span>
                        </div>


                        <label asp-for="IsActive" class="col-sm-2 col-form-label">Is Active</label>
                        <div class="col-sm-4">
                            <div>
                                <input type="checkbox" asp-for="IsActive" class="form-check-input" id="chkIsActive"
                                       data-toggle="toggle" data-on="Active" data-off="In Active" data-onstyle="success" data-offstyle="danger">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <input hidden asp-for="UserID" id="hdnUserID" />
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-3">
                                <center>
                                    <input value="Submit" type="submit" id="btnSubmit" class="btn btn-primary" />
                                    <button type="button" id="btnCancel" class="btn btn-primary">Cancel</button>
                                </center>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">User List</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="table">
                    <table id="tblUser" class="table table-striped responsive-utilities jambo_table"></table>

                </div>
            </div>
        </div>
    </div>

</section>


<script type="text/javascript">

    $(function () {
        $("#txtDOJ").val('');
        $('#chkIsActive').bootstrapToggle('on');

        $("#txtDOJ").datepicker({
            autoclose: true,
            format: 'dd/mm/yyyy'
        });
    });

    var jsonData =@Html.Raw(Json.Serialize(Model.TblUsers));

    window.operateEvents = {
        'click .editUser': function (e, value, row, index) {
            var _userModel = new UserModel();
            _userModel.resetUserModel();
            Window.existingModel = row;
            _userModel.setUserModel(row);
        }
    }
</script>
<script src="@Url.Content("~/ApplicationScripts/user.js")"></script>
